@using System.Globalization
@using UniversitySystem.Models
@model ScheduleModel

@{
    ViewBag.Title = "title";
}
<html>
<head>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/bootstrap.css">
</head>
<body>
    <ul class="nav nav-tabs">
        <li><a href="@Url.Action("Index","Departament")">Факультеты</a></li>
        <li><a href="@Url.Action("Index","Specialization")">Специальности</a></li>
        <li><a href="@Url.Action("Index","Professor")">Преподаватели</a></li>
        <li><a href="@Url.Action("Index","Subject")">Предметы</a></li>
        <li class="active"><a href="@Url.Action("Index","Secretary")">Расписание ЦТ</a></li>
        <li><a href="@Url.Action("Index","Logout")">Выход</a></li>
        <li style="background-color:aqua"><a href="@Url.Action("Create","Secretary")">Добавить</a></li>
    </ul>

    <div class="form">
        <form class="form-horizontal" role="form" method="POST" action="@Url.Action("Change","Secretary")">
            
            <div class="form-group">
                <label class="col-sm-2 control-label">Предмет:</label>
                <div class="col-xs-12">
                    <select class="form-control" name="SubjectId">
                        @foreach (var b in ViewBag.SubjectList)
                        {
                            if (b.Id == Model.SubjectId)
                            {
                                <option selected="selected" value="@b.Id">@b.Title</option>
                            }
                            else
                            {
                                <option value="@b.Id">@b.Title</option>
                            }
                        }

                    </select>
                </div>
            </div>

                <div class="form-group">
                    <label for="inputDate">Введите дату:</label>
                <div class="col-sm-12">
                    <input type="date" class="form-control" name="Date" value=@Model.Date>
                    </div>
                </div>
            

                <div class="form-group">
                    <label for="inputEmail" class="col-sm-2 control-label">Аудитория</label>
                    <div class="col-sm-12">
                        <input type="text" name="Classroom" placeholder="Введите номер аудитории" class="form-control"  value="@Model.Classroom">
                    </div>
                </div>

                <div class="form-group">
                        <label class="col-sm-2 control-label">Преподаватель:</label>
                        <div class="col-xs-12">
                            <select class="form-control" name="ProfessorId">
                                @foreach (var b in ViewBag.ProfessorList)
                                {
                                    if (b.Id == Model.ProfessorId)
                                    {
                                        <option selected="selected" value="@b.Id">@b.Title</option>
                                    }
                                    else
                                    {
                                        <option value="@b.Id">@b.Title</option>
                                    }
                                }

                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-default btn-sm">Добавить</button>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            @Html.ValidationSummary()
                        </div>
                    </div>
                </div>
    
        </form>
    </div>

    <style>
        .form form {
            width: 300px;
            margin: 0 auto;
            padding-top: 20px;
        }
    </style>

</body>
</html>
