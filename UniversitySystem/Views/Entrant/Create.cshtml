@using UniversitySystem.Models
@model UniversitySystem.Models.EntrantModel

@{
    Layout = null;
}

<html>
<head>
    @Styles.Render("~/Content/css")
</head>
<body>
    <ul class="nav nav-tabs">
        <li class="active"><a href="@Url.Action("Index","Entrant")">Абитуриенты</a></li>
        <li><a href=@Url.Action("Index","Committee")>Результаты</a></li>
        <li><a href=@Url.Action("Index","Logout")>Выход</a></li>
        <li style="background-color:aqua"><a href="@Url.Action("Create","Entrant")">Записать</a></li>
    </ul>

    <div class="form">
        <form class="form-horizontal" role="form" method="POST" action="@Url.Action("Create","Entrant")">
            <div class="form-group">
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">№ паспорта</label>
                    <div class="col-sm-12">
                        <input type="text" name="Passport" placeholder="Введите №" class="form-control">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Фамилия</label>
                    <div class="col-sm-12">
                        <input type="text" name="FirstName" placeholder="Введите фамилию" class="form-control">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Имя</label>
                    <div class="col-sm-12">
                        <input type="text" name="Name" placeholder="Введите имя" class="form-control">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Отчество</label>
                    <div class="col-sm-12">
                        <input type="text" name="LastName" placeholder="Введите отчество" class="form-control">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputDate">Введите дату:</label>
                    <div class="col-sm-12">
                        <input type="date" class="form-control" name="DateOfBirth">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputDate">Выберите специальность:</label>
                    <div class="col-xs-12">
                        <select class="form-control" name="SpecializationId">
                            @foreach (DropDownListItem b in ViewBag.List)
                            {
                                <option value="@b.Id">@b.Title</option>
                            }

                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-default btn-sm">Добавить</button>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        @Html.ValidationSummary()
                    </div>
                </div>
            </div>
        </form>
    </div>

    <style>
        .form form {
            width: 300px;
            margin: 0 auto;
            padding-top: 20px;
        }
    </style>

</body>
</html>