
@using UniversitySystem.Models
@model IEnumerable<ProfessorViewModel>

<html>
<head>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/bootstrap.css">
</head>
<body>
    <ul class="nav nav-tabs">
        <li><a href="@Url.Action("Index","Departament")">Факультеты</a></li>
        <li><a href="@Url.Action("Index","Specialization")">Специальности</a></li>
        <li class="active"><a href="@Url.Action("Index","Professor")">Преподаватели</a></li>
        <li><a href="@Url.Action("Index","Subject")">Предметы</a></li>
        <li><a href="@Url.Action("Index","Secretary")">Расписание ЦТ</a></li>
        <li><a href="@Url.Action("Index","Logout")">Выход</a></li>
        <li style="background-color:aqua"><a href="@Url.Action("Create","Professor")">Добавить</a></li>
    </ul>
    <div class="form">
        <table class="table">
            <tr>
                <td><p>ID</p></td>
                <td><p>ФИО</p></td>
                <td><p>Факультет</p></td>
                <td><p>Расписание</p></td>
                <td></td>
            </tr>
            @foreach (ProfessorViewModel b in Model)
            {
                <tr>
                    <td><p>@b.Id</p></td>
                    <td><p>@b.Name</p></td>
                    <td><p>@b.DepartamentTitle</p></td>
                    <td><p>link</p></td>
                    <td><p><a href="@Url.Action("Delete","Professor",new { id=@b.Id})">Удалить</a>/<a href="@Url.Action("Change","Professor",new { id=@b.Id})">Изменить</a></p></td>
                </tr>
            }
        </table>
    </div>

    <style>
        .form form {
            width: 300px;
            margin: 0 auto;
            padding-top: 20px;
        }
    </style>
</body>
</html>

