@using UniversitySystem.Models
@model IEnumerable<ResultViewModel>

@{
    Layout = null;
}

<html>
<head>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/bootstrap.css">
</head>
<body>
<ul class="nav nav-tabs">
    <li><a href="@Url.Action("Index","Entrant")">Абитуриенты</a></li>
    <li class="active"><a href=@Url.Action("Index","Committee")>Результаты</a></li>
    <li><a href=@Url.Action("Index","Logout")>Выход</a></li>
   
</ul>
    
    <div class="form">
        <table class="table">
            <tr>
                <td><p>ID</p></td>
                <td><p>ФИО</p></td>
                <td><p>Предмет</p></td>
                <td><p>Баллы</p></td>
                <td></td>
            </tr>
            @foreach (var b in Model)
            {
                <tr>
                    <td><p>@b.Id</p></td>
                    <td><p>@b.EntrantName</p></td>
                    <td><p>@b.SubjectTitle</p></td>
                    <td><p>@b.Points</p></td>

                    <td><p><a href="@Url.Action("Delete","Committee",new { id=@b.Id})">Удалить</a>/<a href="@Url.Action("Change","Committee",new { id=@b.Id})">Изменить</a></p></td>
                </tr>
            }
        </table>
    </div>

    <style>
        .form form {
            width: 300px;
            margin: 0 auto;
            padding-top: 20px;
        }
    </style>
</body>
</html>