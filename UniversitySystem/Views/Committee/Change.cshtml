@using UniversitySystem.Models
@model UniversitySystem.Models.ResultModel
@{
    ViewBag.Title = "Change";
}

<html>
<head>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/bootstrap.css">
</head>
<body>
    <ul class="nav nav-tabs">
        <li><a href="@Url.Action("Index","Entrant")">Абитуриенты</a></li>
        <li class="active"><a href=@Url.Action("Index","Results")>Результаты</a></li>
        <li><a href=@Url.Action("Index","Logout")>Выход</a></li>
    </ul>

    <div class="form">
        <form class="form-horizontal" role="form" method="POST" action="@Url.Action("Change","Committee")">
            <div class="form-group">
                <div class="form-group">
                    <div class="col-sm-12">
                        <h2>@Model.EntrantName</h2>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label">Факультет:</label>
                    <div class="col-xs-12">
                        <select class="form-control" name="SubjectId">
                            @foreach (DropDownListItem b in ViewBag.List)
                            {
                                if (b.Id == Model.SubjectId)
                                {
                                    <option selected="selected" value="@b.Id">@b.Title</option>
                                }
                                else
                                {
                                    <option value="@b.Id">@b.Title</option>
                                }
                            }

                        </select>
                    </div>
                </div>
                
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Баллы</label>
                    <div class="col-sm-12">
                        <input type="text" name="Points" placeholder="Введите число" class="form-control" value="@Model.Points">
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-12">
                        <button type="submit" class="btn btn-default btn-sm">Изменить</button>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-12">
                        @Html.ValidationSummary()
                    </div>
                </div>
            </div>
        </form>
    </div>

    <style>
        .form form {
            width: 300px;
            margin: 0 auto;
            padding-top: 20px;
        }
    </style>
</body>
</html>


