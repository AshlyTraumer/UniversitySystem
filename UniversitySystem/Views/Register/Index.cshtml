@model UniversitySystem.Models.RegisterModel
@{
    ViewBag.Title = "Index";
}
@using UniversitySystem.Core

<html>
<head>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/bootstrap.css">
</head>
<body>
    <ul class="nav nav-tabs">
        <li><a href="@Url.Action("Login","Start")">Вход</a></li>
        <li class="active"><a href="@Url.Action("Index","Register")">Регистрация</a></li>
    </ul>

    <div class="form">
        <form class="form-horizontal" role="form" method="POST" action="@Url.Action("Join","Register")">
            <div class="form-group">
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Логин</label>
                    <div class="col-sm-10">
                        @Html.ValidationMessageFor(x => x.Login)                        
                        <input type="text" name="Login" value="@Model.Login" placeholder="Введите логин" class="form-control @Html.GetValidClass(ViewContext.ViewData.ModelState, "Login")">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputPassword3" class="col-sm-2 control-label">Пароль</label>
                    <div class="col-sm-10">
                        @Html.ValidationMessageFor(x => x.Password) 
                        <input type="password" name="Password" value="@Model.Password" placeholder="Введите пароль" class="form-control @Html.GetValidClass(ViewContext.ViewData.ModelState, "Password")">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputPassword3" class="col-sm-2 control-label">Повторите пароль</label>
                    <div class="col-sm-10">
                        @Html.ValidationMessageFor(x => x.RetypePassword)
                        <input type="password" name="RetypePassword" value="@Model.RetypePassword" placeholder="Введите пароль" class="form-control @Html.GetValidClass(ViewContext.ViewData.ModelState, "RetypePassword")">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Роль:</label>
                    <div class="col-xs-10">                        
                        <select class="form-control @Html.GetValidClass(ViewContext.ViewData.ModelState, "Role")" name="Role">
                            @foreach (ClassLibrary.Authorization.Role d in Enum.GetValues(typeof(ClassLibrary.Authorization.Role)))
                            {
                                <option>@d</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-default btn-sm">Регистрация</button>
                    </div>
                </div>

            </div>
        </form>
    </div>

    <style>
        .form form {
            width: 300px;
            margin: 0 auto;
            padding-top: 20px;
        }

        .field-validation-error {
            color: #f00;
        }

        .input-validation-error {
                border: 1px solid #f00;
                background-color: #fee;
        }

        .valid-error {
                border: 1px solid #f00;
                background-color: #fee;
        }
    </style>
</body>
</html>
