@model UniversitySystem.Models.UserModel
  


<html>
<head>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/bootstrap.css">
</head>
<body>
    <ul class="nav nav-tabs">
        <li class="active"><a href="@Url.Action("Login","Start")">Вход</a></li>
        <li><a href="@Url.Action("Index","Register")">Регистрация</a></li>       
        <li><a href="@Url.Action("Get","Report")">Report</a></li>  
        <li><a href="@Url.Action("GetAjax","Report")">Report Ajax</a></li>   
        <li><a href="@Url.Action("Export","Zip")">Экспорт базы данных</a></li>         
        <li><a href="@Url.Action("Import","Zip")">Импорт базы данных</a></li>         
    </ul>

    <div class="form">        
        <form class="form-horizontal" role="form" method="POST" action="@Url.Action("Login","Start")">
            <div class="form">
                <h2>@Resources.Resource.Title</h2>
            </div>
            <div class="form-group">
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">@Resources.Resource.Login</label>
                    <div class="col-sm-10">
                        <input type="text" name="Login" placeholder="Введите логин" class="form-control"> 
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputPassword3" class="col-sm-2 control-label">@Resources.Resource.Password</label>
                    <div class="col-sm-10">
                        <input type="password" name="Password" placeholder="Введите пароль" class="form-control"> 
                    </div>
                </div>
                
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-default btn-sm">Войти</button>
                    </div>
                </div>  
                
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        @Html.ValidationSummary()
                    </div>
                </div>               
                </div>
        </form>
    </div>

    <style>
        .form form {
  width: 300px;
  margin: 0 auto;
  padding-top: 20px;
}
    </style>
</body>
</html>

