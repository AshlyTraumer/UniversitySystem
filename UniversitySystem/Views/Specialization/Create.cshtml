@using UniversitySystem.Models;
@model SpecializationModel

<html>
<head>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/bootstrap.css">
</head>
<body>
    <ul class="nav nav-tabs">
        <li><a href=@Url.Action("Index","Departament")>Факультеты</a></li>
        <li class="active"><a href="@Url.Action("Index","Specialization")">Специальности</a></li>
        <li ><a href="@Url.Action("Index","Professor")">Преподаватели</a></li>
        <li><a href="@Url.Action("Index","Subject")">Предметы</a></li>
        <li><a href="@Url.Action("Index","Admin")">Расписание ЦТ</a></li>
        <li><a href="@Url.Action("Index","Logout")">Выход</a></li>
        <li style="background-color:aqua"><a href="@Url.Action("Create","Specialization")">Добавить</a></li>
    </ul>

    <div class="form">
        <form class="form-horizontal" role="form" method="POST" action="@Url.Action("Create","Specialization")">
            <div class="form-group">
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-10 control-label">Название</label>
                    <div class="col-sm-10">
                        <input type="text" name="Title" placeholder="Введите название" class="form-control">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-10 control-label">Набор на бюджет</label>
                    <div class="col-sm-10">
                        <input type="text" name="FreeCount" placeholder="Введите число" class="form-control">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-10 control-label">Набор на платное</label>
                    <div class="col-sm-10">                        
                        <input type="text" name="PayCount" placeholder="Введите число" class="form-control">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-10 control-label">Факультет:</label>
                    <div class="col-xs-10">
                        <select class="form-control" name="DepartamentId">
                            @foreach (DropDownListItem b in ViewBag.List)
                            {
                                <option value="@b.Id">@b.Title</option>
                            }

                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-default btn-sm">Добавить</button>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        @Html.ValidationSummary()
                    </div>
                </div>
            </div>
        </form>
    </div>

    <style>
        .form form {
            width: 300px;
            margin: 0 auto;
            padding-top: 20px;
        }
    </style>
</body>
</html>


